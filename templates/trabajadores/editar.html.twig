{% extends 'base.html.twig' %}

{% block title %}Formulario para editar trabajadores!{% endblock %}

{% block bootstrap %}
<!-- CSS Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

<!-- FontAwesome 6.2.0 icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
{% endblock %}

{% block trabajadores_css %}
<!-- Archivo CSS en Symfony desde carpeta public -->
<link rel="stylesheet" href="{{ asset('css/trabajadores.css') }}">
{% endblock %}


{% block editar_trabajador %}

<div class="example-wrapper rounded mt-xs-2 mt-lg-5 mt-md-5 p-xs-2 p-lg-5 p-md-5
    pb-xs-2 pb-lg-3 pb-md-3 container-background justify-content-start">
	<h2 class="text-center text-light pt-xs-2 pt-lg-4 pt-md-4" style="font-family: helvetica;">
        {{ titulo_formulario }}
    </h2>

    <div class="container-fluid mt-xs-3 mt-lg-5 mt-md-5 text-white">
        <!-- Formulario creado con la sintáxis óptima de Symfony (funcionalidad) -->
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.nombre, {'attr': {'class': 'form-control', 'placeholder': trabajador.nombre }}) }}
        </div>
        <div class="form-group">
            {{ form_row(form.apellidos, {'attr': {'class': 'form-control', 'placeholder': trabajador.apellidos}}) }}
        </div>

        <div class="form-group">
            {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': trabajador.email}}) }}
        </div>

        <div class="row row-cols-2 mt-xs-1 mt-lg-3 mt-md-3">
            <a href="{{ path('trabajadores') }}" class="btn btn-danger text-white">
                <span class="fas fa-solid fa-arrow-left"></span>
                <span>Cancelar</span>
            </a>

            <button class="btn {{ button_color|default('btn-primary') }}  mt-3">
                <span class="fas fa-solid fa-edit"></span>
                <span>{{ button_label|default('Editar') }}</span>
            </button>
        </div>
    </div>
</div>
{% endblock %}